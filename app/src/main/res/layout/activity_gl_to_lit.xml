<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gl_to_lit">

    <TextView
        android:id="@+id/uctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/sanchez"
        android:text="UnitsConverter"
        android:textAlignment="center"
        android:textSize="100px" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uctext"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sanchez"
        android:text="Gallons to Litres"
        android:textAlignment="center"
        android:textSize="70px" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miles:"
        android:id="@+id/milestext"
        android:layout_below="@+id/desc"
        android:textSize="50px"
        android:layout_marginTop="100px"
        android:textAlignment="center"
        />
    -->
    <EditText
        android:id="@+id/edt_gallons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:fontFamily="@font/sanchez"
        android:hint="Enter Gallons"
        android:textAlignment="center"
        android:textSize="75px" />

    <TextView
        android:id="@+id/result_lit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_gallons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:fontFamily="@font/sanchez"
        android:hint="Result in Litres"
        android:textSize="75px" />

    <Button
        android:id="@+id/submit_gallons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_lit"
        android:layout_alignLeft="@id/result_lit"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sanchez"
        android:text="Submit" />

    <Button
        android:id="@+id/backbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_lit"
        android:layout_alignRight="@id/result_lit"
        android:fontFamily="@font/sanchez"
        android:text="Back" />

</RelativeLayout>
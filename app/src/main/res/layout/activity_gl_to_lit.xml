<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gl_to_lit">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uctext"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="UnitsConverter"
        android:textSize="100px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/uctext"
        android:textSize="70px"
        android:id="@+id/desc"
        android:text="Gallons to Litres"
        android:textAlignment="center"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miles:"
        android:id="@+id/milestext"
        android:layout_below="@+id/desc"
        android:textSize="50px"
        android:layout_marginTop="100px"
        android:textAlignment="center"
        />
    -->
    <EditText
        android:id="@+id/edt_gallons"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:hint="Enter Gallons"
        android:layout_below="@+id/desc"
        android:layout_marginTop="100px"
        android:textSize="75px"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/result_kms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="75px"
        android:hint="Result in Litres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_below="@+id/edt_gallons"/>

    <Button
        android:id="@+id/submit_gallons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/result_kms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"/>

    <Button
        android:id="@+id/backbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_toRightOf="@id/result_kms"
        android:layout_below="@id/result_kms"
        />

</RelativeLayout>